# Docker Environment Variables
# Copy this file to .env in the root directory before running docker-compose

# ============================================
# FRONTEND CONFIGURATION (Vite build-time)
# ============================================

# Firebase Configuration (from Firebase Console)
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Backend API URL (as seen from the browser)
# For local Docker: http://localhost:5001
# For production: https://your-backend-domain.com
VITE_BACKEND_URL=http://localhost:5001

# ============================================
# BACKEND CONFIGURATION (Runtime)
# ============================================

# Frontend URL (for CORS)
# For local Docker: http://localhost:5004
# For production: https://your-frontend-domain.com
FRONTEND_URL=http://localhost:5004

# Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Firebase Service Account Key (JSON string on one line)
# Get from: Firebase Console > Project Settings > Service accounts > Generate new private key
# Paste the entire JSON content as a single line
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

